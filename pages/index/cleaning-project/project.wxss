/* pages/index/cleaning-project/project.wxss */
.project {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}
.project-type {
  overflow: hidden;
}
.project-type-item {
  width: 30%;
  margin-left: 16rpx;
  margin-bottom: 18rpx;
  margin-top: 10rpx;
  background: #fff;
  text-align: center;
  font-size: 14px;
  padding: 50rpx 0;
  float: left;
  border-radius: 6rpx;
  overflow: hidden;
  border:1rpx solid #fff;
}
.project-type-item .money image{
  width: 50rpx;
  height: 50rpx;
}
.project-type-item .money {
  color: #db5044;
  margin-top: 10rpx;
}
.project-input {
  background: #fff;
  overflow: hidden;
  padding: 25rpx;
  font-size: 14px;
  line-height: 50rpx;
}
.project-input-box {
  float: right; 
}
.project-input-text {
  float: left;
}
.project-input-box input {
  float: left;
  background: #999;
  width: 140rpx;
  height: 50rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  color: #fff;
  text-indent: 1rpx;
}
.project-tips {
  font-size: 12px;
  color: #999;
  padding: 25rpx;
  line-height: 24px;
}
.project-btn {
  width: 95%;
  height: 85rpx;
  background: #db5044;
  color: #fff;
  text-align: center;
  line-height: 85rpx;
  font-size: 14px;
  border-radius: 6rpx;
  position: absolute;
  bottom: 30rpx;
  left: 20rpx;
}

.arctive {
  border-color: #db5044;
}

/* pages/order/order.wxss */
.order {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-size: 14px;
}
.order-head {
  overflow: hidden;
  background: #fff;
  height: 80rpx;
}
.order-head .item {
  width: 20%;
  height: 79rpx;
  line-height: 80rpx;
  float: left;
  text-align: center;
}
.order-list {
  margin-top: 20rpx;
}
.order-info {
  background: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #ededed;
}
.order-info .title .bs {
  float: right; 
  color: #db5044;
}
.address,.date {
  color: #999;
  margin-top: 10rpx;
}
.master-list {
  position: relative;
}
.master-list-top {
  overflow: hidden;
}
.master-name {
  overflow: hidden;
  padding-bottom: 15rpx;
}
.master-name .atte {
  float: right;
  color: #db5044;
}
.service-num {
  margin-right: 20rpx;
}
.master-list {
  margin-top: 20rpx;
}
.master-list-top {
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #ededed;
}
.master-list-btn {
  width: 150rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 12px;
  color: #fff;
  background: #db5044;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}
.border-none {
  padding-bottom: 0;
}
.arctive  {
  color: #db5044;
  border-bottom: 1px solid #db5044;
}
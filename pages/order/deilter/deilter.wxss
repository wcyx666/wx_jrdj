/* pages/order/order.wxss */
.order-deilter {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-size: 14px;
}
.order-deilter-info {
  background: #fff;
  padding: 20rpx;
}
.order-deilter-info .title text {
  float: right;
  color: #db5044;
}
.problem {
  padding-top: 10rpx;
  color: #999;
}
.order-deilter-content {
  background: #fff;
  padding: 0 20rpx;
  margin-top: 20rpx;
}
.order-deilter-content-info {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #ededed;
}
.order-deilter-content-info view {
  padding-top: 30rpx;
}
.tips {
  font-size: 14px;
  color: #999;
  padding: 20rpx;
}
.tips .title {
  padding-bottom: 10rpx;
}
.canle {
  width: 95%;
  height: 85rpx;
  margin: 50rpx auto;
  background: #db5044;
  color: #fff;
  text-align: center;
  line-height: 85rpx;
  font-size: 14px;
  border-radius: 6rpx;
  position: fixed;
  bottom: 0;
  left: 20rpx;
}
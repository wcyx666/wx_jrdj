/* pages/localAdmin/addLocal/addLocal.wxss */
.add-local {
  font-size: 14px;
}
.add-local-title {
  padding: 30rpx 20rpx;
}
.add-local-content,
.add-local-name {
  padding: 0 25rpx;
}
.add-local-info {
  background: #fff;
}
.add-local-info .section {
  overflow: hidden;
  height:100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  border-bottom: 1rpx solid #ededed;
  text-align: left;
}
.add-local-info .section image.right {
  width:40rpx;
  height:45rpx;
}
.add-local-info .section image.addree {
  width:20rpx;
  height:38rpx;
  margin-right:10rpx;
}
.add-local-info .section input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
}
.add-local-btn {
  width: 95%;
  height: 85rpx;
  margin: 50rpx auto;
  background: #db5044;
  color: #fff;
  text-align: center;
  line-height: 85rpx;
  font-size: 14px;
  border-radius: 6rpx;
}
/* pages/my/coupon/coupon.wxss */
.coupon {
  background: #fafafa;
  position: absolute;
  width: 100%;
  height: 100%;
}
.coupon_box {
  padding: 25rpx;
}
.coupon_list {
  background: #fff;
  padding: 30rpx;
  font-size: 14px;
  overflow: hidden;
}
.coupon_list_left {
  width: 70%;
  float: left;
  border-right:1rpx dashed #999;
}
.coupon_list_left_title {
  color: #333;
  font-weight: bold;
  padding-bottom: 20rpx;
}
.coupon_list_left_txt {
  font-size: 12px;
  color: #999;
  padding-bottom: 20rpx;
}
.coupon_list_right {
  width: 29%;
  float: right;
}
.coupon_list_right_money {
  color: red;
  font-size: 24px;
}
.coupon_list_right_money text {
  font-size: 14px;
}
.coupon_list_right_box {
  float: right;
}
.coupon_list_right_btn {
  width: 150rpx;
  height: 60rpx;
  text-align: center;
  background: red;
  color: #fff;
  line-height: 60rpx;
  font-size: 12px;
}
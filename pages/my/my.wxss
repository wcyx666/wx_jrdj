/* pages/my/my.wxss */
.my {
  font-size: 14px;
  background: #fafafa;
  position: absolute;
  width: 100%;
  height: 100%;
}
.my_info {
  overflow: hidden; 
  background: #fff;
  padding: 30rpx 25rpx;
}
.my_info_phone {
  float: left;
  line-height: 150rpx;
}
.my_info_tx {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  float: right;
  overflow: hidden;
}
.my_info_tx image {
  width: 150rpx;
  float: right;
}
.my_list {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 25rpx;
}
.my_list .item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #ededed;
}
.my_list .item image {
  width: 40rpx;
  float: left;
  padding-right: 15rpx;
}
.sign_out {
  padding:0 25rpx;
  padding-top: 100rpx;
}
.sign_out_box {
  width: 100%;
  height: 85rpx;
  text-align: center;
  border: 1rpx solid #ededed;
  line-height: 85rpx;
  border-radius: 3rpx;
}
.return {
  float: right !important;
}
.tn {
  background-color: #fff;
  width: 200rpx;
  float: left;
  font-size: 14px;
  color: #999;
  top: 45rpx;
}

